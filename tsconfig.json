{
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "module": "commonjs",
    "outDir": "lib",
    "lib": [
      "es2018"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "out": "./typedoc",
    "externalPattern": "node\\_modules",
    "excludePrivate": true,
    "excludeProtected": true,
    "target": "ES6"
  }
}
