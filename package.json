{
  "name": "idomizer",
  "version": "0.6.3",
  "description": "An HTML template compiler providing an incremental-dom render factory.",
  "keywords": [
    "template",
    "incremental",
    "dom",
    "incremental-dom",
    "virtual",
    "virtual-dom",
    "browserify",
    "webpack",
    "systemjs",
    "jspm",
    "loader",
    "webpack-loader",
    "module",
    "plugin",
    "babel-plugin",
    "systemjs-plugin",
    "transform",
    "browserify-transform"
  ],
  "homepage": "https://tmorin.github.io/idomizer",
  "bugs": {
    "url": "https://github.com/tmorin/idomizer/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tmorin/idomizer.git"
  },
  "license": "MIT",
  "author": {
    "name": "Thibault Morin",
    "url": "https://tmorin.github.io"
  },
  "main": "lib/idomizer.js",
  "jsnext:main": "src/idomizer.js",
  "scripts": {
    "clean": "rimraf .nyc_output coverage dist lib *.tgz",
    "lint": "jshint src test",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text mocha --recursive",
    "test:watch": "mocha --compilers js:babel-register --recursive --watch",
    "coveralls": "nyc report --reporter=text-lcov | coveralls --verbose",
    "check": "npm run lint && npm run test",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/idomizer.js dist/idomizer.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/idomizer.js dist/idomizer.min.js --config webpack.config.production.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "preversion": "npm run check",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags && npm run clean && npm run docs:publish",
    "prepublish": "npm run clean && npm run check && npm run build",
    "docs:clean": "rimraf esdoc",
    "docs:build": "npm run docs:clean && esdoc -c esdoc.json",
    "docs:publish": "npm run docs:build && cd esdoc && git init && git commit --allow-empty -m 'update esdoc' && git checkout -b gh-pages && git add . && git commit -am 'update esdoc, [skip ci]' && git push git@github.com:tmorin/idomizer gh-pages --force && cd .. && npm run docs:clean"
  },
  "dependencies": {
    "browserify-transform-tools": "^1.5.0",
    "htmlparser2": "^3.9.2",
    "loader-utils": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.0.0",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-register": "^6.0.0",
    "browserify": "^14.1.0",
    "chai": "^3.4.0",
    "coveralls": "^2.11.9",
    "cross-env": "^3.1.1",
    "esdoc": "^0.5.0",
    "incremental-dom": "^0.5.0",
    "istanbul": "^0.4.5",
    "jsdom": "^9.0.0",
    "jshint": "^2.8.0",
    "json-loader": "^0.5.0",
    "mocha": "^3.0.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.4.0",
    "systemjs": "^0.20.0",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.0"
  },
  "npmName": "idomizer",
  "npmFileMap": [
    {
      "basePath": "/dist/",
      "files": [
        "*.js"
      ]
    }
  ],
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
