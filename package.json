{
  "name": "idomizer",
  "version": "0.10.2",
  "description": "An HTML template compiler providing an incremental-dom render factory.",
  "keywords": [
    "template",
    "incremental",
    "dom",
    "incremental-dom",
    "virtual",
    "virtual-dom",
    "browserify",
    "webpack",
    "systemjs",
    "jspm",
    "loader",
    "webpack-loader",
    "module",
    "plugin",
    "babel-plugin",
    "systemjs-plugin",
    "transform",
    "browserify-transform"
  ],
  "homepage": "https://tmorin.github.io/idomizer",
  "bugs": {
    "url": "https://github.com/tmorin/idomizer/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tmorin/idomizer.git"
  },
  "license": "MIT",
  "author": {
    "name": "Thibault Morin",
    "url": "https://tmorin.github.io"
  },
  "main": "lib/idomizer.js",
  "jsnext:main": "src/idomizer.js",
  "scripts": {
    "clean": "rimraf dist lib *.tgz",
    "lint": "jshint src test",
    "test:karma": "karma start --single-run --no-auto-watch --no-colors --browsers FirefoxHeadless",
    "test:plugins": "mocha test/plugins --recursive --require @babel/register",
    "test:karma:watch": "karma start --no-single-run --auto-watch --browsers Firefox",
    "test": "npm run test:plugins && npm run test:karma",
    "check": "npm run lint && npm run test",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack --config webpack.dev.js",
    "build:umd:min": "webpack --config webpack.prd.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "preversion": "npm run check",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags && npm run clean && npm run docs:publish",
    "prepublish": "npm run clean && npm run check && npm run build",
    "docs:clean": "rimraf esdoc",
    "docs:build": "npm run docs:clean && esdoc -c esdoc.json",
    "docs:publish": "npm run docs:build && cd esdoc && git init && git commit --allow-empty -m 'update esdoc' && git checkout -b gh-pages && git add . && git commit -am 'update esdoc, [skip ci]' && git push git@github.com:tmorin/idomizer gh-pages --force && cd .. && npm run docs:clean"
  },
  "dependencies": {
    "browserify-transform-tools": "^1.5.0",
    "htmlparser2": "^3.9.2",
    "loader-utils": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.4",
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "incremental-dom": "^0.6.0",
    "jshint": "^2.9.6",
    "json-loader": "^0.5.0",
    "karma": "^3.1.1",
    "karma-cli": "^1.0.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "rimraf": "^2.4.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage"
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
